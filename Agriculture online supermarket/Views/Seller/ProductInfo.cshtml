@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "商品信息修改添加";
}
@model Agriculture_online_supermarket.Models.ProductInfoViewModel
<h2>商品信息修改添加</h2>

@Html.ActionLink("保存", "SaveProductInfo", "Seller")

<h2 class="text-center">商品信息添加和修改管理</h2>
<hr>
    <!--<div class="row text-center hidden-xs">-->
    <div class="sellersj col-md-11">
        <h3> 商品明细</h3>
    </div>

    <!-- </div>-->


@using (Html.BeginForm("SaveAccountInfo", "Seller", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container">
        @Html.AntiForgeryToken()
        
        <div class="sellersj col-md-2">
            <h4>商品名称：</h4>

        </div>
        <div class="sellersj col-md-4">@Html.TextBoxFor(m =>m.productName, new { @class = "form-control" })</div>
        <div class="sellersj col-md-6"><p></p></div>
        <div class="sellersj col-md-2">
            <h4> 单价：</h4>

        </div>
        <div class="sellersj col-md-4">@Html.TextBoxFor(m => m.unitPrice, new { @class = "form-control" })</div>
        <div class="sellersj col-md-6"><p></p></div>
        <div class="sellersj col-md-2">
            <h4> 库存：</h4>

        </div>
        <div class="sellersj col-md-4">@Html.TextBoxFor(m => m.Inventory, new { @class = "form-control" })</div><!--value="null"可以设置默认值readonly表示只能读不能写-->
        <div class="sellersj col-md-6"><p></p></div>
        <div class="sellersj col-md-2">
           <h4>商品详情：</h4>

        </div>
        <div class="sellersj col-md-4">
            @Html.TextAreaFor(m=>m.productInfo,new { @name = "yj",@clos = "20",@rows = "5",@style = "width:330px;" })
                         
        </div>
        <div class="sellersj col-md-6"><p></p></div>
    </div>
    <hr>
    <div class="sellersj col-md-12"><p></p></div>


    <div class="sellersj col-md-5"><p></p></div>
    <div class="sellersj col-md-1">
        <p>
            <button type="submit" class="btn btn-default">保存</button>
        </p>
    </div>
}

