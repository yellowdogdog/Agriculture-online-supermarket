@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "商品信息修改添加";
}
@model Agriculture_online_supermarket.Models.ProductInfoViewModel
<h2>商品信息修改添加</h2>

@Html.ActionLink("保存", "SaveProductInfo", "Seller")

<h2 class="text-center">商品信息添加和修改管理</h2>
<hr>
    <!--<div class="row text-center hidden-xs">-->
    <div class="sellersj col-md-11">
        <h3> 商品明细</h3>
    </div>

    <!-- </div>-->


@using (Html.BeginForm("SaveProductInfo", "Seller", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="container">
        @Html.AntiForgeryToken()
        <div class="col-md-8">
            <div class="row">
                <div class="sellersj col-md-3">
                    <h4>商品名称：</h4>

                </div>
                <div class="sellersj col-md-6">@Html.TextBoxFor(m => m.productName, new { @class = "form-control" })</div>
                <div class="sellersj col-md-3"><p>&nbsp;</p></div>
            </div>
        <div class="row">
            <div class="sellersj col-md-3">
                <h4> 单价：</h4>

            </div>
            <div class="sellersj col-md-6">@Html.TextBoxFor(m => m.unitPrice, new { @class = "form-control" })</div>
            <div class="sellersj col-md-3"><p>&nbsp;</p></div>
        </div>
        <div class="row">
                <div class="sellersj col-md-3">
                    <h4> 单位</h4>

                </div>
                <div class="sellersj col-md-6">@Html.TextBoxFor(m => m.unit, new { @class = "form-control" })</div>
                <div class="sellersj col-md-3"><p>&nbsp;</p></div>
        </div>
        <div class="row">
            <div class="sellersj col-md-3">
                <h4> 库存：</h4>

            </div>
            <div class="sellersj col-md-6">@Html.TextBoxFor(m => m.Inventory, new { @class = "form-control" })</div><!--value="null"可以设置默认值readonly表示只能读不能写-->
            <div class="sellersj col-md-3"><p>&nbsp;</p></div>
        </div>
        <div class="row">
            <div class="sellersj col-md-3">
                <h4> 商品图片：</h4>
            </div>
            <div class="sellersj col-md-6"><input type="file" name="file" class="form-control" /></div>
            <div class="sellersj col-md-3"><p>&nbsp;</p></div>
        </div>
        <div class="row">
            <div class="sellersj col-md-3">
                <h4>商品详情：</h4>

            </div>
            <div class="sellersj col-md-6">
                @Html.TextAreaFor(m => m.productInfo, new { @clos = "20", @rows = "5", @style = "width:330px;" })

            </div>
            <div class="sellersj col-md-3"><p>&nbsp;</p></div>
        </div>
        
        </div>
        <div class="col-md-4">
            @if (Model != null)
            {
                <img src="@Html.Raw(Model.imagePath)" ,alt="暂无图片">
            }

</div>
    </div>
    <hr>
    <div class="sellersj col-md-12"><p></p></div>


    <div class="sellersj col-md-5"><p></p></div>
    <div class="sellersj col-md-1">
        <p>
            <button type="submit" class="btn btn-default">保存</button>
        </p>
    </div>
}

